{
    "include": [
        "./src"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": false,
        "skipLibCheck": true,
        "alwaysStrict": false,
        "removeComments": true,
        "types": [
            "jquery",
            "vite/client"
        ],
        "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        }
    }
}